<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>    
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/main.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="navbar navbar-inverse">
            <div class="navbar-header nav-links">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Home", "Home")" class=" navbar-brand"><img src="http://cdn-img.easylogo.cn/gif/51/51700.gif" alt="Logo" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-links">
                    <li><a href="@Url.Action("Home", "Home")">Home</a> </li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Work", "Business")">Work</a></li>
                    <li><a href="@Url.Action("Careers", "Business")">Careers</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div id="main-content">
            @RenderBody()
        </div>
     </div>
        <footer>
            <div class="container">
                <hr />
                <div class="col-md-6">&copy; 2014 Fake Studio</div>
                <div class="col-md-6 text-right nav-links">
                    <a href="@Url.Action("Home", "Home")">Home</a> |
                    <a href="@Url.Action("Home", "Home")">About</a> |
                    <a href="@Url.Action("Work", "Business")">Work</a> |
                    <a href="@Url.Action("Careers", "Business")">Careers</a> |
                    <a href="@Url.Action("Contact", "Home")">Contact</a>
                </div>
            </div>
        </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
