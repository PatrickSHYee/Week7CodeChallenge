<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand"><img src="http://cdn-img.easylogo.cn/gif/51/51700.gif" alt="Logo" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">.
                    <li><a href="@Url.Action("Index", "Home")">Home</a> </li>
                    <li><a href="@Url.Action("Home", "Home")">About</a></li>
                    <li><a href="@Url.Action("Work", "Business")">Work</a></li>
                    <li><a href="@Url.Action("Careers", "Business")">Careers</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="panel-footer">
            <div class="navbar">
            &copy; 2014 Fake Studio
            <div class="nav text-right">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home")">Home</a> </li>
                    <li><a href="@Url.Action("Home", "Home")">About</a></li>
                    <li><a href="@Url.Action("Work", "Business")">Work</a></li>
                    <li><a href="@Url.Action("Careers", "Business")">Careers</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>
            </div>
                </div>
        </footer> 
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/main.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
